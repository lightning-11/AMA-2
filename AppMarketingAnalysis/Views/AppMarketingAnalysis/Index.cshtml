        <canvas id="chart5" class="Chart5 Chart" width="700" height="450"></canvas>
    </div>

    <!--Chart6圖表區-->
    <div id="Chart6" class="Chart6 Chart" style="margin-top:5px;">
        <h3>app商機的考量</h3>
        <canvas id="chart6" class="Chart6 Chart" width="700" height="450"></canvas>
    </div>

